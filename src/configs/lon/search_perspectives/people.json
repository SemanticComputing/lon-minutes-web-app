{
    "id": "people",
    "endpoint": {
        "url": "http://ldf.fi/lon/sparql",
        "useAuth": true,
        "prefixesFile": "SparqlQueriesPrefixes.js"
    },
    "sparqlQueriesFile": "SparqlQueriesPeople.js",
    "baseURI": "http://ldf.fi/lon",
    "URITemplate": "<BASE_URI>/actors/<LOCAL_ID>",
    "facetClass": "crm:E21_Person",
    "defaultConstraint": "FILTER EXISTS { [] :refers_to <SUBJECT> }",
    "frontPageImage": "main_page/people_lon2.jpg",
    "searchMode": "faceted-search",
    "enableDynamicLanguageChange": true,
    "defaultActiveFacets": [
        "prefLabel"
    ],
    "defaultTab": "table",
    "defaultInstancePageTab": "table",
    "maps": {
        "placesActors": {
            "center": [
                22.43,
                10.37
            ],
            "zoom": 2
        },
        "placesActorsHeatmap": {
            "center": [
                22.43,
                10.37
            ],
            "zoom": 1
        },
        "peopleMigrations": {
            "center": [
                22.43,
                10.37
            ],
            "zoom": 1
        }
    },
    "resultClasses": {
        "people": {
            "paginatedResultsConfig": {
                "tabID": 0,
                "component": "ResultTable",
                "tabPath": "table",
                "tabIcon": "CalendarViewDay",
                "propertiesQueryBlock": "personPropertiesFacetResults",
                "pagesize": 30,
                "paginatedResultsAlwaysExpandRows": true,
                "paginatedResultsRowContentMaxHeight": 150,
                "sortBy": "number_of_references",
                "sortDirection": "desc"
            },
            "instanceConfig": {
                "propertiesQueryBlock": "personPropertiesInstancePage",
                "instancePageResultClasses": {
                    "instancePageTable": {
                        "tabID": 0,
                        "component": "InstancePageTable",
                        "tabPath": "table",
                        "tabIcon": "CalendarViewDay"
                    },
                    "peopleInstancePageLetters": {
                        "tabID": 1,
                        "component": "InstancePageTable",
                        "tabPath": "minutes-and-references",
                        "tabIcon": "MailOutline",
                        "fetchResultsWhenMounted": true,
                        "sparqlQuery": "peopleMinutesInstancePageQuery",
                        "properties": [
                            {
                                "id": "sentence",
                                "valueType": "string",
                                "makeLink": false,
                                "externalLink": false,
                                "sortValues": true,
                                "numberedList": true,
                                "showSource": false,
                                "sourceExternalLink": false,
                                "renderAsHTML": true,
                                "HTMLParserTask": "createReactRouterLinks",
                                "minWidth": 90,
                                "expandedOnInstancePage": true
                            },
                            {
                                "id": "minute",
                                "valueType": "object",
                                "makeLink": true,
                                "externalLink": false,
                                "sortValues": false,
                                "numberedList": true,
                                "onlyOnInstancePage": true,
                                "expandedOnInstancePage": true
                            },
                            {
                                "id": "related",
                                "valueType": "object",
                                "makeLink": true,
                                "externalLink": false,
                                "sortValues": false,
                                "numberedList": true,
                                "onlyOnInstancePage": true,
                                "expandedOnInstancePage": true
                            },
                            {
                                "id": "location",
                                "valueType": "object",
                                "makeLink": true,
                                "externalLink": false,
                                "sortValues": false,
                                "numberedList": true,
                                "onlyOnInstancePage": true,
                                "expandedOnInstancePage": true
                            },
                            {
                                "id": "organization",
                                "valueType": "object",
                                "makeLink": true,
                                "externalLink": false,
                                "sortValues": false,
                                "numberedList": true,
                                "onlyOnInstancePage": true,
                                "expandedOnInstancePage": true
                            },
                            {
                                "id": "miscellaneous",
                                "valueType": "object",
                                "makeLink": true,
                                "externalLink": false,
                                "sortValues": false,
                                "numberedList": true,
                                "onlyOnInstancePage": true,
                                "expandedOnInstancePage": true
                            }
                        ]
                    },
                    "lettersByYear": {
                        "tabID": 2,
                        "component": "ApexCharts",
                        "tabPath": "letters-by-year",
                        "tabIcon": "ShowChart",
                        "sparqlQuery": "sentReceivedByPlaceQuery",
                        "facetClass": "places",
                        "filterTarget": "instance",
                        "resultMapper": "mapLineChart",
                        "resultMapperConfig": {
                            "fillEmptyValues": false
                        },
                        "createChartData": "createSingleLineChartData",
                        "title": "Letters by year",
                        "xaxisTitle": "Year",
                        "xaxisType": "category",
                        "xaxisTickAmount": 20,
                        "yaxisTitle": "Number of letters",
                        "seriesTitle": "Number of letters",
                        "stroke": {
                            "curve": "straight",
                            "width": 2
                        }
                    },
                    "instancePageExport": {
                        "tabID": 4,
                        "component": "Export",
                        "tabPath": "export",
                        "tabIcon": "CloudDownload",
                        "pageType": "instancePage"
                    }
                }
            }
        },
        "peopleByProperty": {
            "tabID": 1,
            "component": "ApexCharts",
            "doNotRenderOnMount": true,
            "tabPath": "pie_chart",
            "tabIcon": "PieChart",
            "facetClass": "people",
            "dropdownForResultClasses": true,
            "sortBy": null,
            "defaultResultClass": "peopleByGender",
            "resultClasses": {
                "peopleByGender": {
                    "sparqlQuery": "peopleByGenderQuery",
                    "targetClass": "crm:E21_Person",
                    "filterTarget": "person__id",
                    "resultMapper": "mapPieChart",
                    "sliceVisibilityThreshold": 0.0,
                    "dropdownForChartTypes": "true",
                    "chartTypes": [
                        {
                            "id": "bar",
                            "createChartData": "createApexBarChartData"
                        },
                        {
                            "id": "pie",
                            "createChartData": "createApexPieChartData"
                        }
                    ]
                },
                "peopleByNationality": {
                    "sparqlQuery": "peopleByNationalityQuery",
                    "targetClass": "crm:E21_Person",
                    "filterTarget": "person__id",
                    "resultMapper": "mapPieChart",
                    "sliceVisibilityThreshold": 0.01,
                    "dropdownForChartTypes": "true",
                    "chartTypes": [
                        {
                            "id": "bar",
                            "createChartData": "createApexBarChartData"
                        },
                        {
                            "id": "pie",
                            "createChartData": "createApexPieChartData"
                        }
                    ]
                },
                "peopleByOccupation": {
                    "sparqlQuery": "peopleByOccupationQuery",
                    "targetClass": "crm:E21_Person",
                    "filterTarget": "person__id",
                    "resultMapper": "mapPieChart",
                    "sliceVisibilityThreshold": 0.01,
                    "dropdownForChartTypes": "true",
                    "chartTypes": [
                        {
                            "id": "bar",
                            "createChartData": "createApexBarChartData"
                        },
                        {
                            "id": "pie",
                            "createChartData": "createApexPieChartData"
                        }
                    ]
                }
            }
        },
        "personAges": {
            "tabID": 2,
            "component": "ApexCharts",
            "createChartData": "createMultipleLineChartData",
            "stroke": {
                "curve": "straight",
                "width": 2
            },
            "title": " ",
            "xaxisTitle": "Year",
            "xaxisType": "category",
            "xaxisTickAmount": 20,
            "yaxisTitle": "Number of People",
            "tabPath": "lifetimes",
            "tabIcon": "ShowChart",
            "sparqlQuery": "ageQuery",
            "facetClass": "people",
            "filterTarget": "person__id",
            "resultMapper": "mapMultipleLineChart",
            "resultMapperConfig": {
                "fillEmptyValues": true
            }
        },
        "actorTops": {
            "tabID": 3,
            "component": "ApexCharts",
            "tabPath": "top-references",
            "tabIcon": "Tune",
            "title": "Top {} most referenced people",
            "height": "100%",
            "facetClass": "people",
            "filterTarget": "id",
            "sparqlQuery": "topCorrespondenceFacetPageQuery",
            "resultMapper": "createCorrespondenceChartData",
            "resultMapperConfig": {
                "types": ["reference"],
                "numberTopResults": 25,
                "lastLabel": null
            },
            "createChartData": "createTopTimelineChartData",
            "tooltip": { "x": { "format": "yyyy" } },
            "fill": { "opacity": [0.7, 0.5] },
            "markers": {
                "strokeColors": "#777",
                "strokeWidth": 1
            },
            "dataLabels": {
                "enabled": false
            },
            "plotOptions": {
                "bubble": {
                    "zScaling": true,
                    "minBubbleRadius": 2,
                    "maxBubbleRadius": 20
                }
            },
            "legend": { "position": "bottom" },
            "grid": {
                "row": {
                    "colors": ["#d5d5d5", "transparent"], "opacity": 0.5
                },
                "column": { "colors": ["#a8a8a8", "transparent"] },
                "xaxis": { "lines": { "show": true } },
                "yaxis": { "lines": { "show": true } }
            }
        },
        "placesActors": {
            "tabID": 4,
            "component": "LeafletMap",
            "tabPath": "map",
            "tabIcon": "AddLocation",
            "sparqlQuery": "peopleEventPlacesQuery",
            "facetClass": "people",
            "filterTarget": "person",
            "resultMapper": "mapPlaces",
            "instanceConfig": {
                "propertiesQueryBlock": "placePropertiesInfoWindow",
                "relatedInstances": "minutesRelatedTo",
                "createPopUpContent": "createPopUpContentLetterSampo"
            }
        },
        "placesActorsHeatmap": {
            "tabID": 5,
            "tabPath": "heatmap",
            "tabIcon": "LocalFireDepartment",
            "component": "Deck",
            "layerType": "heatmapLayer",
            "sparqlQuery": "peopleEventHeatmapQuery",
            "facetClass": "people",
            "filterTarget": "person",
            "resultMapper": "mapPlaces"
        },
        "peopleMigrations": {
            "tabID": 6,
            "component": "Deck",
            "tabPath": "migrations",
            "tabIcon": "Redo",
            "sparqlQuery": "peopleMigrationsQuery",
            "facetClass": "people",
            "filterTarget": "person",
            "layerType": "arcLayer",
            "arcWidthVariable": "instanceCountScaled",
            "instanceVariable": "person",
            "showTooltips": true,
            "postprocess": {
                "func": "linearScale",
                "config": {
                    "variable": "instanceCount",
                    "minAllowed": 3,
                    "maxAllowed": 30
                }
            }
        },
        "peopleMigrationsDialog": {
            "sparqlQuery": "peopleMigrationsDialogQuery",
            "filterTarget": "id"
        },
        "csvPlaces": {
            "tabID": 7,
            "component": "ExportCSV",
            "tabPath": "csv",
            "tabIcon": "CloudDownload",
            "resultClass": "places",
            "facetClass": "places",
            "sparqlQuery": "csvQueryPlaces",
            "filterTarget": "id"
        },
        "export": {
            "tabID": 8,
            "component": "Export",
            "tabPath": "sparql",
            "tabIcon": "ArrowForward",
            "resultClass": "places",
            "facetClass": "places"
        },
        "share": {
            "tabID": 9,
            "component": "ExportLink",
            "tabPath": "share",
            "tabIcon": "IosShare",
            "resultClass": "places",
            "facetClass": "places"
        }
