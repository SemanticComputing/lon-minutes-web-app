{
    "id": "places",
    "endpoint": {
        "url": "http://localhost:3030/leona/sparql",
        "useAuth": false,
        "prefixesFile": "SparqlQueriesPrefixes.js"
    },
    "sparqlQueriesFile": "SparqlQueriesPlaces.js",
    "baseURI": "http://ldf.fi/lon",
    "URITemplate": "<BASE_URI>/places/<LOCAL_ID>",
    "facetClass": "crm:E53_Place",
    "defaultConstraint": "FILTER EXISTS { [] :refers_to <SUBJECT> }",
    "frontPageImage": "main_page/places_lon.jpg",
    "searchMode": "faceted-search",
    "enableDynamicLanguageChange": true,
    "defaultActiveFacets": [
        "prefLabel"
    ],
    "defaultTab": "table",
    "defaultInstancePageTab": "table",
    "resultClasses": {
        "places": {
            "paginatedResultsConfig": {
                "tabID": 0,
                "component": "ResultTable",
                "tabPath": "table",
                "tabIcon": "CalendarViewDay",
                "propertiesQueryBlock": "placePropertiesFacetResults",
                "pagesize": 30,
                "paginatedResultsAlwaysExpandRows": true,
                "paginatedResultsRowContentMaxHeight": 150,
                "sortBy": "number_of_references",
                "sortDirection": "desc"
            },
            "instanceConfig": {
                "propertiesQueryBlock": "placePropertiesInstancePage",
                "instancePageResultClasses": {
                    "instancePageTable": {
                        "tabID": 0,
                        "component": "InstancePageTable",
                        "tabPath": "table",
                        "tabIcon": "CalendarViewDay"
                    },
                    "placeInstancePageLetters": {
                        "tabID": 1,
                        "component": "InstancePageTable",
                        "tabPath": "minutes-and-references",
                        "tabIcon": "MailOutline",
                        "fetchResultsWhenMounted": true,
                        "sparqlQuery": "placeLinksInstancePageQuery",
                        "properties": [
                            {
                                "id": "minute",
                                "valueType": "object",
                                "makeLink": true,
                                "externalLink": false,
                                "sortValues": false,
                                "numberedList": true,
                                "onlyOnInstancePage": true,
                                "expandedOnInstancePage": true
                            },
                            {
                                "id": "sentence",
                                "valueType": "string",
                                "makeLink": false,
                                "externalLink": false,
                                "sortValues": true,
                                "numberedList": true,
                                "showSource": false,
                                "sourceExternalLink": false,
                                "renderAsHTML": true,
                                "HTMLParserTask": "createReactRouterLinks",
                                "minWidth": 90,
                                "expandedOnInstancePage": true
                            },
                            {
                                "id": "reference",
                                "valueType": "object",
                                "makeLink": true,
                                "externalLink": false,
                                "sortValues": false,
                                "numberedList": true,
                                "onlyOnInstancePage": true,
                                "expandedOnInstancePage": true
                            },
                            
                            {
                                "id": "born",
                                "valueType": "object",
                                "makeLink": true,
                                "externalLink": false,
                                "sortValues": true,
                                "numberedList": true,
                                "onlyOnInstancePage": true,
                                "expandedOnInstancePage": true
                            },
                            {
                                "id": "deceased",
                                "valueType": "object",
                                "makeLink": true,
                                "externalLink": false,
                                "sortValues": true,
                                "numberedList": true,
                                "onlyOnInstancePage": true,
                                "expandedOnInstancePage": true
                            }
                        ]
                    },
                    "lettersByYear": {
                        "tabID": 2,
                        "component": "ApexCharts",
                        "tabPath": "letters-by-year",
                        "tabIcon": "ShowChart",
                        "sparqlQuery": "sentReceivedByPlaceQuery",
                        "facetClass": "places",
                        "filterTarget": "instance",
                        "resultMapper": "mapLineChart",
                        "resultMapperConfig": {
                            "fillEmptyValues": false
                        },
                        "createChartData": "createSingleLineChartData",
                        "title": "Letters by year",
                        "xaxisTitle": "Year",
                        "xaxisType": "category",
                        "xaxisTickAmount": 20,
                        "yaxisTitle": "Number of letters",
                        "seriesTitle": "Number of letters",
                        "stroke": {
                            "curve": "straight",
                            "width": 2
                        }
                    },
                    "instancePageExport": {
                        "tabID": 3,
                        "component": "Export",
                        "tabPath": "export",
                        "tabIcon": "CloudDownload",
                        "pageType": "instancePage"
                    }
                }
            }
        },
        "csvPlaces": {
            "tabID": 2,
            "component": "ExportCSV",
            "tabPath": "csv",
            "tabIcon": "CloudDownload",
            "resultClass": "places",
            "facetClass": "places",
            "sparqlQuery": "csvQueryPlaces",
            "filterTarget": "id"
        },
        "export": {
            "tabID": 3,
            "component": "Export",
            "tabPath": "sparql",
            "tabIcon": "ArrowForward",
            "resultClass": "places",
            "facetClass": "places"
        },
        "share": {
            "tabID": 4,
            "component": "ExportLink",
            "tabPath": "share",
            "tabIcon": "IosShare",
            "resultClass": "places",
            "facetClass": "places"
        }
    },
    "properties": [
        {
            "id": "image",
            "valueType": "image",
            "previewImageHeight": 160,
            "makeLink": false,
            "externalLink": true,
            "sortValues": true,
            "numberedList": false,
            "hideHeader": true
        },
        {
            "id": "prefLabel",
            "valueType": "object",
            "makeLink": true,
            "externalLink": false,
            "sortValues": true,
            "numberedList": false,
            "expandedOnInstancePage": true
        },
        {
            "id": "altLabel",
            "valueType": "string",
            "renderAsHTML": false,
            "makeLink": false,
            "externalLink": false,
            "sortValues": false,
            "numberedList": false,
            "onlyOnInstancePage": true,
            "expandedOnInstancePage": true
        },
        {
            "id": "location",
            "valueType": "string",
            "makeLink": false,
            "externalLink": false,
            "sortValues": false,
            "numberedList": false,
            "onlyOnInstancePage": true
        },
        {
            "id": "country",
            "valueType": "object",
            "makeLink": true,
            "externalLink": false,
            "sortValues": false,
            "numberedList": false
        },
        {
            "id": "broader",
            "valueType": "object",
            "makeLink": true,
            "externalLink": false,
            "sortValues": false,
            "numberedList": false
        },
        {
            "id": "number_of_references",
            "valueType": "string",
            "makeLink": false,
            "externalLink": false,
            "sortValues": false,
            "numberedList": false
        },
        {
            "id": "narrower",
            "valueType": "object",
            "makeLink": true,
            "externalLink": false,
            "sortValues": false,
            "numberedList": false,
            "onlyOnInstancePage": true,
            "expandedOnInstancePage": true
        },
        {
            "id": "external",
            "valueType": "object",
            "makeLink": true,
            "externalLink": true,
            "sortValues": true,
            "numberedList": false,
            "onlyOnInstancePage": true,
            "expandedOnInstancePage": true
        },
        {
            "id": "uri",
            "valueType": "object",
            "makeLink": true,
            "externalLink": true,
            "sortValues": true,
            "numberedList": false,
            "onlyOnInstancePage": true
        }
    ],
    "facets": {
        "number_of_references": {
            "sortByPattern": "{ SELECT ?id (COALESCE(?_orderBy,0) AS ?orderBy) WHERE { VALUES ?facetClass { <FACET_CLASS> } ?id a ?facetClass . OPTIONAL { ?id :number_of_references ?_orderBy }} }"
        },
        "prefLabel": {
            "containerClass": "one",
            "facetType": "text",
            "filterType": "textFilter",
            "sortByPredicate": "skos:prefLabel",
            "textQueryProperty": "skos:prefLabel"
        },
        "country": {
            "containerClass": "ten",
            "facetType": "list",
            "filterType": "uriFilter",
            "predicate": ":country",
            "sortBy": "instanceCount",
            "sortDirection": "desc",
            "searchField": true,
            "sortButton": true,
            "barChartButton": true,
            "sortByPredicate": ":country/skos:prefLabel",
            "facetLabelFilter": "FILTER(LANG(?prefLabel_) = 'en')"
        },
        "broader": {
            "containerClass": "ten",
            "facetType": "list",
            "filterType": "uriFilter",
            "predicate": "skos:broader",
            "sortBy": "instanceCount",
            "sortDirection": "desc",
            "searchField": true,
            "sortButton": true,
            "sortByPredicate": "skos:broader/skos:prefLabel"
        },
        "external": {
            "containerClass": "six",
            "facetType": "list",
            "predicate": "(owl:sameAs|foaf:page)/a",
            "filterType": "uriFilter",
            "sortBy": "instanceCount",
            "sortDirection": "desc",
            "sortByPredicate": "(owl:sameAs|foaf:page)/a/skos:prefLabel",
            "hideUnknownValue": true
        }
    }
}