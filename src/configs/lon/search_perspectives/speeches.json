    "facets": {
        "sort_by_url": {
            "sortByPattern": "{ SELECT ?id ?orderBy WHERE { VALUES ?facetClass { <FACET_CLASS> } ?id a ?facetClass ; :order ?orderBy. } }"
        },
        "search": {
            "containerClass": "one",
            "facetType": "text",
            "filterType": "textFilter",
            "textQueryProperty": ":html",
            "textQueryGetLiteral": true,
            "textQueryHiglightingOptions": "highlight:s:<b> | e:</b> | z:27500",
            "textQueryMaxInstances": 1000000
        },
        "speaker": {
            "containerClass": "ten",
            "facetType": "list",
            "filterType": "uriFilter",
            "predicate": "portal:speaker",
            "searchField": true,
