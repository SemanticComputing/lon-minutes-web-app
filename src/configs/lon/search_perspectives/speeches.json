{
    "id": "speeches",
    "endpoint": {
        "url": "http://ldf.fi/lon/sparql",
        "useAuth": true,
        "prefixesFile": "SparqlQueriesPrefixes.js"
    },
    "sparqlQueriesFile": "SparqlQueriesSpeeches.js",
    "baseURI": "http://ldf.fi/lon",
    "URITemplate": "<BASE_URI>/speeches/<LOCAL_ID>",
    "facetClass": ":Speech",
    "defaultConstraint": "FILTER EXISTS { <SUBJECT> skos:prefLabel [] }",
    "frontPageImage": "main_page/speeches_lon.png",
    "searchMode": "faceted-search",
    "enableDynamicLanguageChange": true,
    "defaultActiveFacets": [
        "prefLabel"
    ],
    "defaultTab": "table",
    "defaultInstancePageTab": "table",
    "maps": {
        "activitiesByPlace": {
            "center": [
                22.43,
                10.37
            ],
            "zoom": 2
        },
        "placesSpeechesHeatmap": {
            "center": [
                22.43,
                10.37
            ],
            "zoom": 2
        }
    },
    "resultClasses": {
        "speeches": {
            "paginatedResultsConfig": {
                "tabID": 0,
                "component": "ResultTable",
                "tabPath": "table",
                "tabIcon": "CalendarViewDay",
                "propertiesQueryBlock": "speechesPropertiesFacetResults",
                "pagesize": 30,
                "paginatedResultsAlwaysExpandRows": true,
                "paginatedResultsRowContentMaxHeight": 150,
                "sortBy": "sort_by_url",
                "sortDirection": "asc",
                "postprocess": {
                    "func": "processTextIndexHighlighting"
                }
            },
            "instanceConfig": {
                "propertiesQueryBlock": "speechPropertiesInstancePage",
                "instancePageResultClasses": {
                    "actorInstancePageTable": {
                        "tabID": 0,
                        "component": "InstancePageTable",
                        "tabPath": "table",
                        "tabIcon": "CalendarViewDay"
                    },
                    "instancePageExport": {
                        "tabID": 1,
                        "component": "Export",
                        "tabPath": "export",
                        "tabIcon": "CloudDownload",
                        "pageType": "instancePage"
                    }
                }
            }
        },
        "speechesByYear": {
            "tabID": 1,
            "component": "ApexCharts",
            "tabPath": "by-year",
            "tabIcon": "ShowChart",
            "sparqlQuery": "speechesByYearQuery",
            "facetClass": "speeches",
            "filterTarget": "speech",
            "resultMapper": "mapLineChart",
            "resultMapperConfig": {
                "fillEmptyValues": false
            },
            "createChartData": "createSingleLineChartData",
            "title": "Speeches by year",
            "xaxisTitle": "Year",
            "xaxisType": "category",
            "xaxisTickAmount": 20,
            "yaxisTitle": "Number of speeches",
            "seriesTitle": "Number of speeches",
            "stroke": {
                "curve": "straight",
                "width": 2
            }
        },
        "speechesByProperty": {
            "tabID": 2,
            "component": "ApexCharts",
            "doNotRenderOnMount": true,
            "tabPath": "pie_chart",
            "tabIcon": "PieChart",
            "facetClass": "speeches",
            "dropdownForResultClasses": true,
            "sortBy": null,
            "defaultResultClass": "Speakers",
            "resultClasses": {
                "Speakers": {
                    "sparqlQuery": "speakersInSpeechesQuery",
                    "targetClass": ":Speech",
                    "filterTarget": "speech__id",
                    "resultMapper": "mapPieChart",
                    "sliceVisibilityThreshold": 0.0,
                    "dropdownForChartTypes": "true",
                    "chartTypes": [
                        {
                            "id": "bar",
                            "createChartData": "createApexBarChartData"
                        },
                        {
                            "id": "pie",
                            "createChartData": "createApexPieChartData"
                        }
                    ]
                },
                "SpeakerCountries": {
                    "sparqlQuery": "speakerCountriesInSpeechesQuery",
                    "targetClass": ":Speech",
                    "filterTarget": "speech__id",
                    "resultMapper": "mapPieChart",
                    "sliceVisibilityThreshold": 0.0,
                    "dropdownForChartTypes": "true",
                    "chartTypes": [
                        {
                            "id": "bar",
                            "createChartData": "createApexBarChartData"
                        },
                        {
                            "id": "pie",
                            "createChartData": "createApexPieChartData"
                        }
                    ]
                },
                "PeopleInMinutes": {
                    "sparqlQuery": "peopleInSpeechesQuery",
                    "targetClass": ":Speech",
                    "filterTarget": "speech__id",
                    "resultMapper": "mapPieChart",
                    "sliceVisibilityThreshold": 0.0,
                    "dropdownForChartTypes": "true",
                    "chartTypes": [
                        {
                            "id": "bar",
                            "createChartData": "createApexBarChartData"
                        },
                        {
                            "id": "pie",
                            "createChartData": "createApexPieChartData"
                        }
                    ]
                },
                "OrganizationsInMinutes": {
                    "sparqlQuery": "organizationsInSpeechesQuery",
                    "targetClass": ":Speech",
                    "filterTarget": "speech__id",
                    "resultMapper": "mapPieChart",
                    "sliceVisibilityThreshold": 0.01,
                    "dropdownForChartTypes": "true",
                    "chartTypes": [
                        {
                            "id": "bar",
                            "createChartData": "createApexBarChartData"
                        },
                        {
                            "id": "pie",
                            "createChartData": "createApexPieChartData"
                        }
                    ]
                },
                "LocationsInMinutes": {
                    "sparqlQuery": "locationsInSpeechesQuery",
                    "targetClass": ":Speech",
                    "filterTarget": "speech__id",
                    "resultMapper": "mapPieChart",
                    "sliceVisibilityThreshold": 0.01,
                    "dropdownForChartTypes": "true",
                    "chartTypes": [
                        {
                            "id": "bar",
                            "createChartData": "createApexBarChartData"
                        },
                        {
                            "id": "pie",
                            "createChartData": "createApexPieChartData"
                        }
                    ]
                },
                "ConceptsInSpeeches": {
                    "sparqlQuery": "conceptsInSpeechesQuery",
                    "targetClass": ":Speech",
                    "filterTarget": "speech__id",
                    "resultMapper": "mapPieChart",
                    "sliceVisibilityThreshold": 0.01,
                    "dropdownForChartTypes": "true",
                    "chartTypes": [
                        {
                            "id": "bar",
                            "createChartData": "createApexBarChartData"
                        },
                        {
                            "id": "pie",
                            "createChartData": "createApexPieChartData"
                        }
                    ]
                }
