        "actorTops": {
            "tabID": 3,
            "component": "ApexCharts",
            "tabPath": "top-speakers",
            "tabIcon": "Tune",
            "title": "Top {} speakers",
            "height": "100%",
            "facetClass": "speeches",
            "filterTarget": "id",
            "sparqlQuery": "topCorrespondenceFacetPageQuery",
            "resultMapper": "createCorrespondenceChartData",
            "resultMapperConfig": {
                "types": ["speaker"],
                "numberTopResults": 25,
                "lastLabel": null
            },
            "createChartData": "createTopTimelineChartData",
            "fill": { "opacity": [0.7, 0.5] },
            "markers": {
                "strokeColors": "#777",
                "strokeWidth": 1
            },
            "dataLabels": {
                "enabled": false
            },
            "plotOptions": {
                "bubble": {
                    "zScaling": true,
                    "minBubbleRadius": 1,
                    "maxBubbleRadius": 15
                }
            },
            "legend": { "position": "bottom" },
            "grid": {
                "row": {
                    "colors": ["#d5d5d5", "transparent"], "opacity": 0.5
                },
                "column": { "colors": ["#a8a8a8", "transparent"] },
                "xaxis": { "lines": { "show": true } },
                "yaxis": { "lines": { "show": true } }
            }
        },
        "actorNetwork": {
            "tabID": 4,
            "component": "Network",
            "tabPath": "network",
            "tabIcon": "BubbleChart",
            "sparqlQuery": "networkLinksQuery",
            "facetClass": "speeches",
            "sparqlQueryNodes": "networkNodesFacetQuery",
            "filterTarget": "speech",
            "useNetworkAPI": true,
            "limit": 200,
            "optimize": 2.0,
            "preprocess": "preprocessMinutes",
            "style": [
                {
                    "selector": "node",
                    "style": {
                        "shape": "ellipse",
                        "font-size": 10,
                        "background-color": "data(color)",
                        "label": "data(prefLabel)",
                        "height": "data(size)",
                        "width": "data(size)"
                    }
                },
                {
                    "selector": "edge",
                    "style": {
                        "width": "data(weight)",
                        "line-color": "data(color)",
                        "curve-style": "bezier",
                        "content": "data(prefLabel)",
                        "color": "hsl(30, 64%, 35%)",
                        "target-arrow-shape": "triangle",
                        "target-arrow-color": "data(color)",
                        "font-size": "8",
                        "text-valign": "center",
                        "edge-text-rotation": "autorotate",
                        "text-background-opacity": 1,
                        "text-background-color": "white",
                        "text-background-shape": "roundrectangle"
                    }
                }
            ],
            "layout": {
                "name": "cose",
                "idealEdgeLength": 100,
                "nodeOverlap": 20,
                "refresh": 20,
                "fit": true,
                "padding": 30,
                "randomize": false,
                "componentSpacing": 100,
                "nodeRepulsion": 400000,
                "edgeElasticity": 100,
                "nestingFactor": 5,
                "gravity": 80,
                "numIter": 1347,
                "initialTemp": 200,
                "coolingFactor": 0.95,
                "minTemp": 1
            }
        },
        "activitiesByPlace": {
            "tabID": 5,
            "component": "LeafletMap",
            "tabPath": "map",
            "tabIcon": "AddLocation",
            "sparqlQuery": "speechPlacesQuery",
            "facetClass": "speeches",
            "filterTarget": "speech",
            "resultMapper": "mapPlaces",
            "instanceConfig": {
                "propertiesQueryBlock": "placePropertiesInfoWindow",
                "relatedInstances": "speechesRelatedTo",
                "createPopUpContent": "createPopUpContentMinutes"
            }
        },
        "placesSpeechesHeatmap": {
            "tabID": 6,
            "tabPath": "heatmap",
            "tabIcon": "LocalFireDepartment",
            "component": "Deck",
            "layerType": "heatmapLayer",
            "sparqlQuery": "speechesHeatmapQuery",
            "facetClass": "speeches",
            "filterTarget": "speech",
            "resultMapper": "mapPlaces"
        },
        "csvSpeeches": {
